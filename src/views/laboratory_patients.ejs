<%- include('partials/_header'); -%>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Patients Assigned to <%= lab_name %> Laboratory</h2>
            <p class="lead">Technician: <%= technician %></p>
            <a href="/laboratories" class="btn btn-secondary mb-3">Back to Laboratories</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <% if (data && data.length > 0) { %>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Patient Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].patient_name %></td>
                                <td>
                                    <a href="/patients/update/<%= data[i].patient_id %>" class="btn btn-info btn-sm">Update</a>
                                    <a href="/patients/delete/<%= data[i].patient_id %>" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="alert alert-info">
                    No patients assigned to this laboratory.
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/_footer'); -%>
