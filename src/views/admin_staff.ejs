<%- include('partials/_header'); -%>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Staff Managed by <%= admin_name %></h2>
            <a href="/admins" class="btn btn-secondary mb-3">Back to Admins</a>
        </div>
    </div>

    <!-- Doctors Section -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Doctors</h3>
            <% if (doctors && doctors.length > 0) { %>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Specialization</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < doctors.length; i++) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= doctors[i].name %></td>
                                <td><%= doctors[i].specialization %></td>
                                <td><%= doctors[i].email %></td>
                                <td><%= doctors[i].phone %></td>
                                <td>
                                    <a href="/doctors/patients/<%= doctors[i].doctor_id %>" class="btn btn-success btn-sm">View Patients</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No doctors assigned to this admin.</p>
            <% } %>
        </div>
    </div>

    <!-- Nurses Section -->
