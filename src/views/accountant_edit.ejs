<%- include('partials/_header'); -%>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Edit Accountant</h2>
            <a href="/accountants" class="btn btn-secondary mb-3">Back to Accountants</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form action="/accountants/update/<%= data.accountant_id %>" method="post">
                        <div class="form-group">
                            <label for="accountant_id">Accountant ID</label>
                            <input type="number" name="accountant_id" value="<%= data.accountant_id %>" class="form-control" readonly>
                        </div>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" value="<%= data.name %>" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" value="<%= data.email %>" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            <input type="text" name="phone" value="<%= data.phone %>" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="admin_id">Admin</label>
                            <select name="admin_id" class="form-control">
                                <option value="">-- Select Admin --</option>
                                <% if (admins) { %>
                                    <% for (var i = 0; i < admins.length; i++) { %>
                                        <option value="<%= admins[i].admin_id %>" <%= (data.admin_id == admins[i].admin_id) ? 'selected' : '' %>>
                                            <%= admins[i].name %>
                                        </option>
                                    <% } %>
                                <% } %>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Update Accountant
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer'); -%>
